{
  "name": "jest-audio-reporter",
  "description": "Plays audio on jest events",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.base.json",
    "clean": "rimraf dist",
    "codecov": "codecov",
    "coverage": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "tsc && jest",
    "verify": "npm run lint && npm run build && npm run coverage && npm run dependency-check",
    "watch": "tsc && jest --watch",
    "semantic-release": "semantic-release"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/jest-audio-reporter.git"
  },
  "bugs": {
    "url": "https://github.com/unional/jest-audio-reporter/issues"
  },
  "homepage": "https://github.com/unional/jest-audio-reporter",
  "keywords": [
    "jest",
    "reporters",
    "sounds"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": ".*.spec.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "reporters": [
      "default",
      [
        "<rootDir>/dist/index.js",
        {
          "onSuitePass": "<rootDir>/audio/昇格.mp3",
          "onSuiteFailure": "./audio/48 Dragon Quest V PS2 - Cursed Item.mp3"
        }
      ]
    ],
    "roots": [
      "<rootDir>/src"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.6",
    "assertron": "^5.1.4",
    "dependency-check": "^3.2.0",
    "eslint": "^5.3.0",
    "eslint-plugin-unional": "^1.0.0",
    "jest": "^23.4.2",
    "semantic-release": "^15.9.5",
    "ts-jest": "^23.1.2",
    "tslint": "^5.11.0",
    "tslint-config-unional": "^0.9.6",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "play-sound": "^1.1.2"
  }
}
